---
interface Props {
  title: string;
  body: string;
  href: string;
  img: string;
}

const { href, title, body, img } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <img class="icon" src={img} alt="Astro logo" />
    <h2>
      {title}
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: var(--lighter);
    border: 0.12svw solid transparent;
    border-radius: 2svw;
    box-shadow: 0svw 0.2svw 1svw -0.4svw var(--gray);
    transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 3svw;
    border-radius: 2svw;
    color: var(--darker);
  }
  .icon {
    width: 4svw;
    margin-bottom: 1.6svw;
    background: var(--light);
    border-radius: 1svw;
    padding: 0.6svw;
    filter: hue-rotate(280deg);
  }
  h2 {
    font-size: clamp(18px, 1.6svw, 40px);
    font-weight: 700;
    line-height: 1;
    max-width: 9.2svw;
    margin-bottom: 1svw;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    color: var(--accent);
    border: 0.12svw solid var(--accent-dark);
  }
</style>
